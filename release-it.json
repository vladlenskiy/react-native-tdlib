{
  "git": {
    "requireBranch": "master",
    "requireUpstream": true,
    "push": false,
    "commit": false,
    "tag": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    },
    "@release-it/bumper": {
      "infile": "package.json",
      "commit": "chore(release): bump to ${version}",
      "create": "pr",
      "push": true
    }
  }
}