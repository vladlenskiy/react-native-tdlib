{
  "git": {
    "commit": true,
    "tag": true,
    "push": true,
    "requireCleanWorkingDir": false,
    "requireBranch": "master"
  },
  "npm": {
    "publish": true,
    "registry": "https://registry.npmjs.org"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    }
  }
}